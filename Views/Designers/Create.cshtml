@model CreativeDesk.Models.Designer
@{
    ViewData["Title"] = "Add Designer";
}
<h1 style="text-align:center;color:#423E37;">Add Designer</h1>
<div style="max-width:500px;margin:2rem auto;background:#fff;border-radius:14px;padding:2rem 2.5rem;border:1px solid #E3B23C;">
<form asp-action="Create">
    <div class="form-group" style="margin-bottom:1.2rem;">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-input" />
    </div>
    <div class="form-group" style="margin-bottom:1.2rem;">
        <label asp-for="AvailabilityStatus" class="form-label"></label>
        <select asp-for="AvailabilityStatus" class="form-input">
            <option value="Available">Available</option>
            <option value="Not Available">Not Available</option>
        </select>
    </div>
    <div style="display:flex;gap:1rem;justify-content:flex-end;">
        <button type="submit" class="btn btn-primary">Add Designer</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
</div>