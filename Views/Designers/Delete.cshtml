@model CreativeDesk.Models.Designer
@{
    ViewData["Title"] = "Delete Designer";
}
<h1 style="text-align:center;color:#c0392b;">Delete Designer</h1>
<div style="max-width:500px;margin:2rem auto;background:#fff;border-radius:14px;padding:2rem 2.5rem;border:1px solid #E3B23C;">
    <h3 style="color:#c0392b;">Are you sure you want to delete this designer?</h3>
    <dl class="row">
        <dt class="col-sm-4">Name</dt>
        <dd class="col-sm-8">@Model.Name</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="DesignerId" />
        <div style="display:flex;gap:1rem;justify-content:flex-end;margin-top:1.5rem;">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

