@model IEnumerable<Payment>

<h2>Payments</h2>

<table class="table">
    <thead>
        <tr>
            <th>Project</th>
            <th>Amount</th>
            <th>Payment Status</th>
            <th>Payment Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payment in Model)
        {
            <tr>
                <td>@payment.Project.Name</td>
                <td>@payment.Amount</td>
                <td>@payment.PaymentStatus</td>
                <td>@payment.PaymentDate.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Add Payment</a>
