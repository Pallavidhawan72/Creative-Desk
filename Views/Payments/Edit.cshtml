@model Payment

<h2>Edit Payment</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="PaymentId" />

    <label>Project ID:</label>
    <input type="number" asp-for="ProjectId" class="form-control" required readonly />

    <label>Amount:</label>
    <input type="number" asp-for="Amount" class="form-control" required />

    <label>Payment Status:</label>
    <select asp-for="PaymentStatus" class="form-control">
        <option value="Pending">Pending</option>
        <option value="Paid">Paid</option>
    </select>

    <label>Payment Date:</label>
    <input type="date" asp-for="PaymentDate" class="form-control" required />

    <button type="submit" class="btn btn-warning">Save Changes</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
