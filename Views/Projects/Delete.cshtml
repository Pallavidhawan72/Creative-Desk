@model CreativeDesk.Models.Project

@{
    ViewData["Title"] = "Delete Project";
}

<h1 style="text-align:center;color:#c0392b;">Delete Project</h1>
<div style="max-width:500px;margin:2rem auto;background:#fff;border-radius:14px;padding:2rem 2.5rem;border:1px solid #E3B23C;">
    <h3 style="color:#c0392b;">Are you sure you want to delete this project?</h3>
    <h4 style="color:#E3B23C;">Project</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-4">Title</dt>
        <dd class="col-sm-8">@Model.Title</dd>

        <dt class="col-sm-4">Deadline</dt>
        <dd class="col-sm-8">@Model.Deadline.ToShortDateString()</dd>

        <dt class="col-sm-4">Total Amount</dt>
        <dd class="col-sm-8">$@Model.TotalAmount</dd>

        <dt class="col-sm-4">Amount Paid</dt>
        <dd class="col-sm-8">$@Model.AmountPaid</dd>

        <dt class="col-sm-4">Remaining</dt>
        <dd class="col-sm-8">$@(Model.TotalAmount - Model.AmountPaid)</dd>

        <dt class="col-sm-4">Client</dt>
        <dd class="col-sm-8">@Model.Client?.Name</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProjectId" />
        <div style="display:flex;gap:1rem;justify-content:flex-end;margin-top:1.5rem;">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
