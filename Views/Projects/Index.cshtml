@model IEnumerable<Project>

<h2>Projects</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Deadline</th>
            <th>Status</th>
            <th>Total Payment</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.Name</td>
                <td>@project.Deadline.ToString("yyyy-MM-dd")</td>
                <td>@project.Status</td>
                <td>@project.TotalPayment</td>
                <td>
                    <a href="@Url.Action("Details", new { id = project.ProjectId })">Details</a> |
                    <a href="@Url.Action("Edit", new { id = project.ProjectId })">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Add Project</a>
