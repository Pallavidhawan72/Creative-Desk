@model IEnumerable<User>

<h2>Designers</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Availability Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>                <td>@user.AvailabilityStatus</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = user.UserId })">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = user.UserId })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Add Designer</a>
