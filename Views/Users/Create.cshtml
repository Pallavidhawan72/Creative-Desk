@model User

<h2>Add Designer</h2>

<form asp-action="Create" method="post">
    <label>Name:</label>
    <input type="text" asp-for="Name" class="form-control" required />

    <label>Email:</label>
    <input type="email" asp-for="Email" class="form-control" required />

    <label>Password:</label>
    <input type="password" asp-for="Password" class="form-control" required />

    <label>Availability Status:</label>
    <select asp-for="AvailabilityStatus" class="form-control">
        <option value="Available">Available</option>
        <option value="Unavailable">Unavailable</option>
    </select>

    <button type="submit" class="btn btn-success">Save</button>
</form>
